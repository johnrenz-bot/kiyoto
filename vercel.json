{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/backend/:path*" },
    { "source": "/assets/:path*", "destination": "/dist/assets/:path*" },
    { "source": "/:path*", "destination": "/dist/index.html" }
  ]
}
