{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/:path*"
    },
    {
      "source": "/assets/:path*",
      "destination": "/Frontend/dist/assets/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/Frontend/dist/index.html"
    }
  ]
}
